# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# ML Model Configuration
FORCE_CPU=false
MODEL_NAME=runwayml/stable-diffusion-v1-5
MAX_IMAGE_SIZE=1024
INFERENCE_STEPS=20
GUIDANCE_SCALE=7.5

# CPU-specific settings (for CPU-only machines)
CPU_INFERENCE_STEPS=10
CPU_GUIDANCE_SCALE=5.0

# Diffusion Configuration
NUM_INFERENCE_STEPS=20
STRENGTH=0.8
ETA=0.0

# Evaluation Metrics
ENABLE_METRICS=true
COMPUTE_SSIM=true
COMPUTE_LPIPS=true

# Storage Configuration
DATABASE_URL=sqlite:///metadata.db
MAX_FILE_SIZE_MB=50

# Logging Configuration
LOG_LEVEL=INFO

# Session Management
SESSION_TIMEOUT_MINUTES=120
MAX_EDITS_PER_SESSION=50

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Development Settings
ENABLE_CORS=true
CORS_ORIGINS=*
